# Server Configuration
server.port=8080

# Spring MVC Configuration
spring.mvc.dispatch-trace-request=true
spring.mvc.dispatch-options-request=true
spring.mvc.throw-exception-if-no-handler-found=true

# Spring Boot Actuator - For debugging controller mappings
management.endpoints.web.exposure.include=mappings,health,info
management.endpoint.mappings.enabled=true

# Application Configuration  
spring.application.name=recitapp

# Active Profiles
spring.profiles.active=notifications

# Database Configuration - CAMBIAR CREDENCIALES
spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver
spring.datasource.password=YOUR_DB_PASSWORD
spring.datasource.url=jdbc:mysql://localhost:3306/recitapp?useSSL=false&serverTimezone=UTC
spring.datasource.username=YOUR_DB_USERNAME
spring.jpa.defer-datasource-initialization=true
spring.jpa.hibernate.ddl-auto=update
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.MySQLDialect
spring.jpa.properties.hibernate.format_sql=false
spring.jpa.show-sql=false

# Mail Configuration - CAMBIAR CREDENCIALES
spring.mail.host=smtp.gmail.com
spring.mail.password=YOUR_GMAIL_APP_PASSWORD
spring.mail.port=587
spring.mail.properties.mail.smtp.auth=true
spring.mail.properties.mail.smtp.starttls.enable=true
spring.mail.username=YOUR_EMAIL@gmail.com

# Redis Configuration
spring.redis.host=localhost
spring.redis.port=6379

# File Upload Configuration
spring.servlet.multipart.max-file-size=10MB
spring.servlet.multipart.max-request-size=10MB

# File Storage Configuration
app.file.upload-dir=uploads
app.file.base-url=http://localhost:8080/api

# Database Initialization
spring.sql.init.mode=always
spring.sql.init.platform=mysql

# Swagger/OpenAPI Configuration
springdoc.api-docs.path=/api-docs
springdoc.swagger-ui.filter=true
springdoc.swagger-ui.operationsSorter=method
springdoc.swagger-ui.path=/swagger-ui.html
springdoc.swagger-ui.tagsSorter=alpha

# JWT Configuration - CAMBIAR SECRET
jwt.secret=YOUR_JWT_SECRET_KEY_HERE_MUST_BE_256_BITS_OR_MORE
jwt.expiration=86400000
jwt.refresh.expiration=604800000

# Password Reset Configuration
app.password-reset.expiration=3600000
app.password-reset.max-attempts=3
app.frontend.url=http://localhost:4200

# MercadoPago Configuration - CAMBIAR TOKENS
# Obtener desde: https://www.mercadopago.com.ar/developers/panel/app
mercadopago.access.token=TEST-YOUR_ACCESS_TOKEN_HERE
mercadopago.public.key=TEST-YOUR_PUBLIC_KEY_HERE
mercadopago.success.url=http://localhost:4200/payment/success
mercadopago.failure.url=http://localhost:4200/payment/failure
mercadopago.pending.url=http://localhost:4200/payment/pending
mercadopago.webhook.url=http://localhost:8080/api/payments/webhook

# Ticket PDF Configuration
app.ticket.pdf.storage.path=${TICKET_PDF_STORAGE_PATH:./tickets}
app.name=RecitApp

# Logging Configuration - Clean startup
logging.level.root=INFO

# Reduce Spring Boot startup noise
logging.level.org.springframework.boot=WARN
logging.level.org.springframework.context=WARN
logging.level.org.springframework.beans=WARN
logging.level.org.springframework.web=WARN
logging.level.org.springframework.security=WARN
logging.level.org.springframework.data=WARN

# Reduce repository scanning logs
logging.level.org.springframework.data.repository.config.RepositoryConfigurationExtensionSupport=ERROR

# Reduce Hibernate verbosity
logging.level.org.hibernate=WARN
logging.level.org.hibernate.SQL=WARN
logging.level.org.hibernate.type=WARN
logging.level.org.hibernate.engine=WARN
logging.level.org.hibernate.stat=WARN
logging.level.org.hibernate.orm.deprecation=ERROR

# Database Connection Pool - Silent
logging.level.com.zaxxer.hikari=ERROR

# Tomcat - Reduce noise
logging.level.org.apache.catalina=WARN
logging.level.org.apache.tomcat=WARN

# Spring Integration - Reduce noise
logging.level.org.springframework.integration=WARN

# JPA - Clean
logging.level.org.springframework.orm.jpa=WARN

# Keep application-specific logging for debugging when needed
logging.level.com.recitapp.recitapp_api.modules.user.service.PasswordResetService=DEBUG
logging.level.com.recitapp.recitapp_api.modules.payment=INFO

# Mail debugging - ENABLED for troubleshooting
logging.level.org.springframework.mail=DEBUG
logging.level.org.springframework.mail.javamail=DEBUG

# Logging Configuration
logging.level.com.recitapp.recitapp_api.modules.transaction=DEBUG
logging.level.com.mercadopago=DEBUG
logging.level.org.springframework.web.client.RestTemplate=DEBUG
logging.level.org.springframework.http=DEBUG

# MercadoPago specific logging
logging.level.com.recitapp.recitapp_api.modules.payment.service.impl.MercadoPagoServiceImpl=DEBUG
logging.level.com.recitapp.recitapp_api.modules.payment.service.impl.MercadoPagoRefundServiceImpl=DEBUG
logging.level.com.recitapp.recitapp_api.modules.payment.controller.PaymentController=DEBUG

# Pattern for better log formatting
logging.pattern.console=[%d{yyyy-MM-dd HH:mm:ss}] [%thread] %-5level [%logger{36}] - %msg%n
logging.pattern.file=[%d{yyyy-MM-dd HH:mm:ss}] [%thread] %-5level [%logger{36}] - %msg%n

# Log files configuration
logging.file.name=logs/recitapp.log
logging.file.max-size=10MB
logging.file.max-history=10
logging.logback.rollingpolicy.max-file-size=10MB
logging.logback.rollingpolicy.total-size-cap=100MB

# Specific log levels for debugging
logging.level.com.recitapp.recitapp_api.modules.wallet=DEBUG
logging.level.com.recitapp.recitapp_api.modules.ticket=INFO 